generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  name         String
  player_stats Stats[] @relation("playerStats")
}

model Stats {
  id      Int  @id @default(autoincrement())
  fatigue Int
  userId  Int
  user    User @relation("playerStats", fields: [userId], references: [id])
}
